<h1>Invoice: <%= @invoice.name %>  |  <%= @invoice.invoice %></h1>

<p><%= link_to "Edit", edit_invoice_path(@invoice) %> | <%= link_to "Back to Invoices", invoices_path %></p>
<p><%= link_to "New Item", new_invoice_item_path(@invoice) %></p>
<br>
Advanced Search:
<div class="new-search">
  <%#= render 'searches/form_group', search: Search.new %>
</div>
<br>
New Item:
<div class="new-item">
  <%#= render 'items/form_group', item: Item.new, invoice: @invoice %>
</div>
<p><% @invoice.items %></p>
<table class="table table-striped table-hover">
  <thead>
    <th>Item</th>
  </thead>

  <h4>Export Field Values</h4>
  <p>
    Download:
    <%= link_to "Export Items to CSV", export_invoice_item_path(@invoice, format: "csv") %> |
    <%= link_to "Export Items to Excel", export_invoice_item_path(@invoice, format: "xls") %>
  </p>
  <tbody>
    <% @invoice.items.order(:sku).each do |item| %>
      <tr>
        <td><%= link_to item.sku, edit_invoice_item_path(item.invoice, item) %></td>
        <td><%= item.invoice_tag %></td>
        <td><%= link_to 'show', invoice_item_path(item.invoice, item) %> | <%= link_to 'Delete', item, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
