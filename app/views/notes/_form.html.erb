<h4>Add a note</h4>
 <%= form_for [noteable, note], remote: true do |f| %>
   <div class="form-group">
     <%= f.label :body, class: 'sr-only' %>
     <%= f.text_area :body, class: 'form-control', placeholder: "Enter a new note" %>
   </div>
   <%= f.submit "Submit note", class: 'btn btn-default pull-right' %>
 <% end %>
