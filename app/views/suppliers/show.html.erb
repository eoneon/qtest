<h1>Supplier: <%= @supplier.name %></h1>

<p><%= link_to "Edit Invoice", edit_supplier_path(@supplier) %> | <%= link_to "Return to Invoice List", suppliers_path %></p><br>

<p><% @supplier.invoices %></p>
<table class="table table-striped table-hover">
  <thead>
    <th>Invoice</th>
  </thead>

  <h4>Build New Invoice</h4>
  <p><%= link_to "New Invoice", new_supplier_invoice_path(@supplier) %></p>
  <tbody>
    <% @supplier.invoices.order(:invoice).each do |invoice| %>
      <tr>
        <td><%= link_to invoice.invoice, supplier_invoice_path(invoice.supplier, invoice) %></td>
        <td><%= invoice.try(:name) %></td>
        <td><%= link_to 'edit', edit_supplier_invoice_path(invoice.supplier, invoice) %> | <%= link_to 'Delete', invoice, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
