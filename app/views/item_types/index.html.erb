<p id="notice"><%= notice %></p>

<h1>ItemType#index</h1>
<% if @item_types.empty? %>
  <p><strong>No ItemTypes</strong></p>
<% end %>

<h4>Export Fields</h4>

<p>
  Download:
  <%= link_to "CSV", item_types_path(format: "csv") %> |
  <%= link_to "Excel", item_types_path(format: "xls") %>
</p>
<%= link_to "New item_type", new_item_type_path %>
<h4>Import Fields</h4>
<%= form_tag import_item_types_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<p>flat: <%#= ItemType.other_sculptures.map {|item| item.dropdown} %></p>
<p>Limited: <%#= ItemType.limited_items.map {|item| item.dropdown} %></p>
<p>Not Limited: <%#= ItemType.not_limited.inspect %></p>
<p>Not Limited: <%#= ItemType.not_limited.map {|item| item.dropdown} %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @item_types.each do |item_type| %>
    <%= render 'item_types/item_type', item_type: item_type %>
    <% end %>
  </tbody>
</table>
