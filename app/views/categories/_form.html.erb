<%= form_for(parent, as: :category) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h4>Categories:</h4>
      <%= f.fields_for :field_groups do |builder| %>
        <%= render 'categories/field_group_fields', f: builder %>
      <% end %>
      <%= link_to_add_fields "Add Field", f, :field_groups, "categories" %>
    </div>
  </div>

  <div class="col-md-12">
    <h4>Properties for Categories:</h4>
    <%# parent.sub_elements.each do |sub_element| %>
      <%# sub_element.element_fields.each do |field| %>
        <%#= render 'elements/properties', f: f, parent: parent, field: field %>
      <%# end %>
    <%# end %>
  </div>
  <%= f.submit "Save" %>
<% end %>
