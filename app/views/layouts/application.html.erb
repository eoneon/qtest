<!DOCTYPE html>
<html>
  <head>
    <title>Qtest</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'), false %>
    <%= stylesheet_link_tag href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
  </head>

  <body class="fixed skin-blue-light">
    <div class="wrapper">
      <%= render 'layouts/navigation/layout'%>
      <div class="content-wrapper">
      <ul class="nav nav-tabs">
        <li><%= link_to "Invoices", invoices_path %></li>
        <li><%= link_to "Categories", categories_path %></li>
        <li><%= link_to "Artists", artist_types_path %></li>
        <li><%= link_to "Mountings", mount_types_path %></li>
        <li><%= link_to "ItemTypes", item_types_path %></li>
        <li><%= link_to "Edition", edition_types_path %></li>
        <li><%= link_to "Signatures", sign_types_path %></li>
        <li><%= link_to "Certificates", cert_types_path %></li>
        <li><%= link_to "Dimensions", dim_types_path %></li>
        <li><%= link_to "Disclaimers", disclaimer_types_path %></li>
        <li><%= link_to "Fields", item_fields_path %></li>
        <li><%= link_to "Values", field_values_path %></li>
      </ul>

      <!-- added -->
      <div class="flash">
        <% if flash[:notice] %>
           <div class="alert alert-success">
             <button type="button" class="close" data-dismiss="alert">&times;</button>
             <%= flash[:notice] %>
           </div>
         <% elsif flash.now[:alert] %>
           <div class="alert alert-danger">
             <button type="button" class="close" data-dismiss="alert">&times;</button>
             <%= flash.now[:alert] %>
           </div>
         <% elsif flash[:alert] %>
           <div class="alert alert-warning">
             <button type="button" class="close" data-dismiss="alert">&times;</button>
             <%= flash[:alert] %>
           </div>
         <% end %>
       </div>
      <%= yield %>
      </div>
      <%= render 'layouts/navigation/footer' %>
    </div>
  </body>
</html>
