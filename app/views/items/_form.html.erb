<%= form_for [@invoice, @item], :html => { :class => 'form', :id => 'item_form'} do |f| %>
  <%= render "items/hidden", f: f %>
  <script type="text/javascript">
    function submitform(){
      $('#redirect_location').val(':edit');
      $('#item_form').submit();
    }
  </script>
  <script type="text/javascript">
    function reload(){
      var item_type_id = $('#selectItemtype').val();
      $('#item_item_type_id').val('item_type_id');
    }
  </script>

  <div class="fieldset form-row">
    <div class="col-1">
      <%= f.label :sku %>
      <%= f.text_field :sku, class: 'form-control' %>
    </div>

    <div class="col-4">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="col-2">
      <%= f.label :retail %>
      <%= f.text_field :retail, class: 'form-control' %>
    </div>
  </div>

  <% type_list.each do |type| %>
    <%= render "items/type", type: type, f: f %>
  <% end %>

  <%= render "items/properties", parent: @item, f: f %>
  <%= f.submit "Save" %>
  </div>
<% end %>
