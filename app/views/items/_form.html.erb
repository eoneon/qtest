<%= form_for [@invoice, @item ], :html => {:id => 'item_form'} do |f| %>
  <%= render "items/hidden", f: f %>
  <script type="text/javascript">
    function submitform(){
      $('#redirect_location').val(':edit');
      $('#item_form').submit();
    }
  </script>
  <script type="text/javascript">
    function reload(){
      var item_type_id = $('#selectItemtype').val();
      $('#item_item_type_id').val('item_type_id');
    }
  </script>

  <div class="form-group">
    <div class="row">
      <div class="col-12">
        <%= f.label :tagline %>
        <%= f.text_area :tagline, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :property_room %>
    <%= f.text_area :property_room, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-row">
    <div class="col">
      <%= f.label :sku %>
      <%= f.text_field :sku, class: 'form-control' %>
    </div>

    <div class="col">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="col">
      <%= f.label :retail %>
      <%= f.text_field :retail, class: 'form-control' %>
    </div>
  </div>

  <% type_list.each do |type| %>
    <%= render "items/type", type: type, f: f %>
  <% end %>

  <%= render "items/properties", parent: @item, f: f %>
  <%= f.submit "Save" %>
  </div>
<% end %>
