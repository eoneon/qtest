<%= form_for [@invoice, @item ], :html => {:id => 'item_form'} do |f| %>
<p><strong>build_pr:</strong> <%= @item.build_pr %></p>
<p><strong>replace:</strong> <%#= @item.body_disclaimer(@item.disclaimer_type.typ_ver_args("body")[:v]) %></p>
<p><strong>build_d:</strong> <%= @item.build_d("tag") %></p>
  <%= render "items/hidden", f: f %>
  <script type="text/javascript">
    function submitform(){
      $('#redirect_location').val(':edit');
      $('#item_form').submit();
    }
  </script>
  <script type="text/javascript">
    function reload(){
      var item_type_id = $('#selectItemtype').val();
      $('#item_item_type_id').val('item_type_id');
    }
  </script>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :sku %><br>
      <%= f.text_field :sku %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :retail %><br>
      <%= f.text_field :retail %>
    </div>
  </div>

  <% type_list.each do |type| %>
    <%= render "items/type", type: type, f: f %>
  <% end %>

  <%= render "items/properties", parent: @item, f: f %>
  <%= f.submit "Save" %>
  </div>
<% end %>
