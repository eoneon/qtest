<p id="notice"><%= notice %></p>
<h1><%= @item.sku %> | <%= @item.title %> | <%= @item.artist %></h1><br>
<div> <%= render 'items/sku_nav' %></div>
<blockquote>
  <h4>Tagline:</h4>
  <%= @item.tag %>
</blockquote>

<blockquote>
  <h4>Property Room:</h4>
  <%= @item.prop %>
</blockquote>

<blockquote>
  <h4>Description:</h4>
  <%= @item.descrp %>
</blockquote>

<h4>Duplicate Sku</h4>
<p><%= render 'items/sku_form', invoice: @invoice, item: @item %></p>
<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', edit_invoice_item_path(@item.invoice, @item) %>

<h3>Notes</h3>
<div class='new-note'>
  <%= render 'notes/form', noteable: @item, note: Note.new  %>
</div>
<div class='js-notes'>
  <%= render @item.notes %>
</div>
