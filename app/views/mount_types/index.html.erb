  <p><strong>No ItemTypes</strong></p>
<% end %><br>

<%= link_to "New mounting", new_mount_type_path %><br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @mount_types.each do |mount_type| %>
    <%= render 'mount_types/mount_type', mount_type: mount_type %>
    <% end %>
  </tbody>
</table>

<br>
